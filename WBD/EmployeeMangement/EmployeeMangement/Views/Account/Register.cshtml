@{ 
    ViewBag.Title = "Register member";
}
@model RegisterModel
<div class="login-wrap">
    <div class="login-content">
        <div class="login-form">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="au-input au-input--full" asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input class="au-input au-input--full" asp-for="ConfirmPassword" placeholder="Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Register</button>
            </form>
            <div class="register-link">
                <p>
                    Already have account?
                    <a href="#">Sign In</a>
                </p>
            </div>
        </div>
    </div>
</div>