@model LoginModel
<form method="post" asp-action="Login" asp-controller="Account">
    <table>
        <tr>
            <td>
                <label asp-for="Email"></label>
            </td>
            <td>
                <input asp-for="Email" />
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <input type="password" asp-for="Password" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Login</button>
                <button type="reset">Cancel</button>
            </td>
        </tr>
    </table>
</form>