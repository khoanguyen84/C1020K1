@model List<Cart>
@{
    ViewBag.Title = "Cart info";
}

<h2>Cart Infomation</h2>

@if (Model.Count > 0)
{
    decimal totalAmount = 0;
    int increment = 1;

    <table class="table table-bordered">
        <tr class="thead-dark">
            <th>#</th>
            <th class="text-center">Product Name</th>
            <th class="text-center">Price</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Amount</th>
            <th></th>
        </tr>
        @foreach (var cartitem in Model)
        {
            var amount = cartitem.Quantity * cartitem.Product.Price;
            totalAmount += amount;

            <tr>
                <td>@(increment++)</td>
                <td>@cartitem.Product.ProductName</td>
                <td class="text-right">@($"{cartitem.Product.Price.ToString("n0")} vnd")</td>
                <td class="text-center"><input class="form-control-sm" asp-for="@cartitem.Quantity" id="@($"quantity-{cartitem.Product.ProductId}")" /></td>
                <td class="text-right">@($"{amount.ToString("n0")} vnd")</td>
                <td>
                    <button class="btn btn-success updatecartitem" data-productid="@cartitem.Product.ProductId">
                        Update
                    </button>
                    <a onclick="removeCartItem(@cartitem.Product.ProductId)" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="4" class="text-right">Total amount</td>
            <td class="text-right">@($"{totalAmount.ToString("n0")} vnd")</td>
            <td>
                <a asp-controller="Product" asp-action="Checkout" class="btn btn-success">Submit Cart</a>
            </td>
        </tr>
    </table>

    @section Script {
        <script src="~/lib/bootbox/bootbox.min.js"></script>
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: parseInt(productid),
                          quantity: parseInt(quantity)
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
            function removeCartItem(productId) {
                bootbox.confirm({
                    title: "Remove cart item?",
                    message: "Do you want to remove this item on cart.",
                    buttons: {
                        cancel: {
                            label: '<i class="fa fa-times"></i> No'
                        },
                        confirm: {
                            label: '<i class="fa fa-check"></i> Yes'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                type: "GET",
                                url:`/Product/RemoveCartItem/${productId}`,
                                success: function (result) {
                                    window.location.href = "@Url.RouteUrl("cart")";
                                }
                            });
                        }
                    }
                });
            }
        </script>
    }

}
else
{
    <p class="alert alert-danger">Cart empty</p>
}

